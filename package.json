{
  "name": "license-ripper",
  "version": "0.1.1",
  "description": "Rips license text from LICENSE and README files.",
  "type": "module",
  "bin": {
    "license-ripper": "cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "bin.js"
  ],
  "scripts": {
    "dev": "npm run build && node cli.js",
    "build": "tsc",
    "test": "ava"
  },
  "author": "Arthur Cosentino",
  "license": "ISC",
  "dependencies": {
    "marked": "^4.3.0",
    "node-fetch": "3.3",
    "spdx-correct": "^3.2.0",
    "spdx-satisfies": "^5.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/marked": "^4.0.8",
    "@types/node": "*",
    "ava": "^5.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
